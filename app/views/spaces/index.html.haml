              %table.table2
                %tr
                  - space.start_at.upto(space.end_at) do |i|
                    - if @reservations[space.id].include?(i)
                      %td.back-red
                        = link_to "info", space_reservation_path(:space_id => space.id, :id => @reservations[space.id][i]), :date => @day, style: 'color:black;'
