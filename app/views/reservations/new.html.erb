<h1>Create Reserve</h1>

<%= @reservation.space.name  %>

<%= form_for [@reservation.space, @reservation] do |f| %>
	<%= f.label :customer %>
	<%= f.text_field :customer %>
	<br>
	<%= f.label :date %>
	<%= f.text_field :date %>
	<br>
	<%= f.label :hour %>
	<%= f.text_field :hour %>
	<br>

	<%= f.submit 'Save', class: "small round button" %>
	<%= link_to 'Cancel', spaces_path %>
<% end %>