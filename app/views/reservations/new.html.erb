<div class="sidedar large-4 columns left">&nbsp;</div>
<div class="large-3 columns">
<h1 class="characters">Create Reserve</h1>

<h3 class="characters"><%= @reservation.space.name  %></h3>
<br>


  <%= form_for [@reservation.space, @reservation] do |f| %>
    <%= f.label :customer %>
    <%= f.text_field :customer, :autofocus => true %>
    <br>
    <%= f.label :date %>
    <%= f.text_field :date %>
    <br>
    <%= f.label :hour %>
    <%= f.text_field :hour %>
    <br>

    <%= f.submit 'Save', class: "small round button" %>
    <%= link_to 'Cancel', spaces_path %>
  <% end %>
</div>